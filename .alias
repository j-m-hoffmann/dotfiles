# DOCKER
alias dcu="sudo systemctl start docker && sudo setfacl --modify user:user:rw /var/run/docker.sock && docker-compose up"
alias delete-all-containers='sudo docker rm "$(sudo docker ps -aq)"'
alias delete-all-images='sudo docker rmi "$(sudo docker images -q)"'
alias dup="sudo systemctl start docker && sudo setfacl --modify user:user:rw /var/run/docker.sock"
alias pgup="sudo systemctl start postgresql" 
alias start-docker="sudo systemctl start docker && sudo setfacl --modify user:user:rw /var/run/docker.sock"

